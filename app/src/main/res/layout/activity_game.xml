<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="game.fourier.noughtsandcrosses.GameActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/winText"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b.1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_1"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <Button
                        android:id="@+id/b.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_2"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <Button
                        android:id="@+id/b.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_3"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_4"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <Button
                        android:id="@+id/b.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_5"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <Button
                        android:id="@+id/b.6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_6"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <Button
                        android:id="@+id/b.7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_7"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <Button
                        android:id="@+id/b.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_8"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />

                    <Button
                        android:id="@+id/b.9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickB_9"
                        android:text=""
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/resetGameButton"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/winText"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:elevation="24dp"
                android:onClick="resetButtonClick"
                android:text="Reset"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="407dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
